{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2022",
    "module": "esnext",
    "declaration": false,
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/**/*", "tailwind.config.js", "postcss.config.js", "next.config.js"],
  "exclude": ["node_modules", "dist"]
}