{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,               // Enables JavaScript files in a TypeScript project (set to true by default for Next.js)
    "skipLibCheck": true,          // Skip type checking of declaration files (helps with performance)
    "strict": false,               // Strict mode is set to false by default, but you can enable it for better type safety
    "noEmit": true,                // Don't emit compiled JavaScript (Next.js handles this)
    "incremental": true,           // Incremental compilation for faster rebuilds
    "module": "esnext",            // Use ESNext module system for modern JavaScript
    "esModuleInterop": true,       // Ensure compatibility with CommonJS and ES Modules
    "moduleResolution": "node",    // Use Node.js module resolution strategy
    "resolveJsonModule": true,     // Allow importing of JSON files
    "isolatedModules": true,       // Ensure each file is treated as an isolated module
    "jsx": "preserve",             // Keep JSX syntax for Next.js to handle it
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file imports
    "plugins": [
      {
        "name": "next"             // Next.js plugin for additional TypeScript optimizations
      }
    ]
  },
  "include": [
    "next-env.d.ts",              // Next.js generated types
    "**/*.ts",                    // Include all TypeScript files
    "**/*.tsx",                   // Include all TypeScript JSX files
    "next.config.cjs",            // Include custom Next.js config
    ".next/types/**/*.ts"         // Include types generated by Next.js
  ],
  "exclude": [
    "node_modules"                // Exclude node_modules folder
  ]
}
